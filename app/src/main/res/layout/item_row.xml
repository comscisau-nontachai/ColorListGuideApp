<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_name"
            app:layout_constraintStart_toStartOf="@+id/guild_line01"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_year"
            app:layout_constraintStart_toStartOf="@+id/guild_line01"
            app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

        <TextView
            android:id="@+id/lbl_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_color"
            app:layout_constraintStart_toStartOf="@+id/guild_line01"
            app:layout_constraintTop_toBottomOf="@+id/lbl_year" />

        <TextView
            android:id="@+id/lbl_pantone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_pantone"
            app:layout_constraintStart_toStartOf="@+id/guild_line01"
            app:layout_constraintTop_toBottomOf="@+id/lbl_color" />


        <!--        show data-->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guild_line02"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/txt_name" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_year"
            app:layout_constraintStart_toStartOf="@+id/guild_line02"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <TextView
            android:id="@+id/txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_color"
            app:layout_constraintStart_toStartOf="@+id/guild_line02"
            app:layout_constraintTop_toBottomOf="@+id/txt_year" />

        <TextView
            android:id="@+id/txt_pantone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_pantone"
            app:layout_constraintStart_toStartOf="@+id/guild_line02"
            app:layout_constraintTop_toBottomOf="@+id/txt_color" />

        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_fav"
            android:background="@drawable/toggle_fav"
            app:layout_constraintTop_toTopOf="parent"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent" />

        <!--        guild line-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guild_line01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guild_line02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".32" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>